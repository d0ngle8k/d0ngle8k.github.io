---
import Base from '../layouts/Base.astro';
import { WorkExperience } from '../components/WorkExperience';
import { workHistory } from '../data/work';
---
<Base title="Work | Truong Gia Thanh">
  <section class="mx-auto max-w-5xl px-4 sm:px-6 py-12 sm:py-16 space-y-10">
    <div>
      <p class="text-xs sm:text-sm uppercase tracking-[0.3em] text-secondary">Work</p>
      <h1 class="text-2xl sm:text-3xl font-bold">Experience</h1>
    </div>

    <WorkExperience client:load workHistory={workHistory} />
  </section>
</Base>
