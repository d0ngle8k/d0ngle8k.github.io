---
import Base from '../../layouts/Base.astro';
import { projects } from '../../data/projects';
import { projectDetails } from '../../data/project-details';

export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);
const detail = projectDetails[slug as keyof typeof projectDetails];

if (!project || !detail) {
  return new Response('Project not found', { status: 404 });
}

// Find current index and adjacent projects
const currentIndex = projects.findIndex((p) => p.slug === slug);
const prevProject = currentIndex < projects.length - 1 ? projects[currentIndex + 1] : null;
const nextProject = currentIndex > 0 ? projects[currentIndex - 1] : null;
---

<Base title={project.title}>
  <article class="mx-auto max-w-4xl px-4 sm:px-6 py-12 sm:py-16 space-y-8">
    <div class="space-y-4">
      <p class="text-xs uppercase tracking-[0.3em] text-secondary">{project.date}</p>
      <h1 class="text-2xl sm:text-4xl font-bold leading-tight">{project.title}</h1>
      <div class="flex flex-wrap gap-2">
        {project.tags.map((tag) => (
          <span class="text-xs px-3 py-1 rounded-full border border-white/10 bg-white/5 text-secondary">
            {tag}
          </span>
        ))}
      </div>
    </div>

    <div class="space-y-6">
      <div class="card p-4 sm:p-6 space-y-4">
        <h2 class="text-xl sm:text-2xl font-semibold">Overview</h2>
        <p class="text-secondary leading-relaxed text-sm sm:text-base">{detail.description}</p>
      </div>

      <div class="card p-4 sm:p-6 space-y-4">
        <h2 class="text-xl sm:text-2xl font-semibold">Key Features</h2>
        <ul class="space-y-2">
          {detail.details.map((item) => (
            <li class="flex items-start gap-3 text-secondary text-sm sm:text-base">
              <span class="text-white mt-1 flex-shrink-0">•</span>
              <span class="leading-relaxed">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="card p-4 sm:p-6 space-y-4">
        <h2 class="text-xl sm:text-2xl font-semibold">Technologies</h2>
        <div class="flex flex-wrap gap-2">
          {detail.technologies.map((tech) => (
            <span class="px-3 py-1 rounded-lg border border-white/10 bg-white/5 text-secondary text-xs sm:text-sm">
              {tech}
            </span>
          ))}
        </div>
      </div>

      <div class="card p-4 sm:p-6 space-y-4">
        <h2 class="text-xl sm:text-2xl font-semibold">Source Code</h2>
        <a 
          href={detail.github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-white/10 bg-white/5 text-white hover:bg-white/10 hover:border-white/30 transition-all text-sm sm:text-base"
        >
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View on GitHub
        </a>
      </div>
    </div>

    <div class="pt-8 border-t border-white/10 space-y-6">
      <!-- Navigation Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <!-- Previous Project -->
        {prevProject ? (
          <a 
            href={`/projects/${prevProject.slug}`}
            class="group card p-4 hover:border-white/30 hover:-translate-y-0.5 transition-all"
          >
            <div class="text-xs text-secondary mb-2">← Previous</div>
            <div class="font-semibold text-sm group-hover:text-white transition-colors line-clamp-2">{prevProject.title}</div>
          </a>
        ) : (
          <div class="card p-4 opacity-50">
            <div class="text-xs text-secondary mb-2">← Previous</div>
            <div class="text-sm text-secondary">No previous project</div>
          </div>
        )}
        
        <!-- Next Project -->
        {nextProject ? (
          <a 
            href={`/projects/${nextProject.slug}`}
            class="group card p-4 hover:border-white/30 hover:-translate-y-0.5 transition-all text-right"
          >
            <div class="text-xs text-secondary mb-2">Next →</div>
            <div class="font-semibold text-sm group-hover:text-white transition-colors line-clamp-2">{nextProject.title}</div>
          </a>
        ) : (
          <div class="card p-4 opacity-50 text-right">
            <div class="text-xs text-secondary mb-2">Next →</div>
            <div class="text-sm text-secondary">No next project</div>
          </div>
        )}
      </div>

      <!-- Back to Projects -->
      <div class="text-center">
        <a href="/projects" class="inline-flex items-center gap-2 text-secondary hover:text-white transition text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to all projects
        </a>
      </div>
    </div>
  </article>
</Base>
