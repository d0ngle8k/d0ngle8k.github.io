---
import Base from '../../layouts/Base.astro';
import { posts } from '../../data/posts';
import { blogDetails } from '../../data/blog-details';

export async function getStaticPaths() {
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { slug } = Astro.params;
const post = posts.find((p) => p.slug === slug);
const detail = blogDetails[slug as keyof typeof blogDetails];

if (!post || !detail) {
  return new Response('Post not found', { status: 404 });
}

// Find current index and adjacent posts (circular navigation)
// Posts array is ordered: newest (index 0) -> oldest (index last)
// prevPost = older blog (higher index), nextPost = newer blog (lower index)
const currentIndex = posts.findIndex((p) => p.slug === slug);
const prevPost = currentIndex < posts.length - 1 ? posts[currentIndex + 1] : posts[0];
const nextPost = currentIndex > 0 ? posts[currentIndex - 1] : posts[posts.length - 1];
---

<Base title={post.title}>
  <article class="mx-auto max-w-3xl px-4 sm:px-6 py-12 sm:py-16 space-y-8">
    <div class="space-y-4">
      <p class="text-xs uppercase tracking-[0.3em] text-secondary">{post.date}</p>
      <h1 class="text-2xl sm:text-4xl font-bold leading-tight">{post.title}</h1>
      <div class="flex flex-wrap gap-2">
        {post.tags.map((tag) => (
          <span class="text-xs px-3 py-1 rounded-full border border-white/10 bg-white/5 text-secondary">
            {tag}
          </span>
        ))}
      </div>
    </div>

    <div class="prose prose-invert max-w-none space-y-6">
      {detail.sections.map((section) => (
        <div class="space-y-3">
          <h2 class="text-xl sm:text-2xl font-semibold">{section.title}</h2>
          {section.content.map((paragraph) => (
            <p class="text-secondary leading-relaxed text-sm sm:text-base">{paragraph}</p>
          ))}
        </div>
      ))}
    </div>

    <div class="pt-8 border-t border-white/10 space-y-6">
      <!-- Navigation Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <!-- Previous Post -->
        <a 
          href={`/blog/${prevPost.slug}`}
          class="group card p-4 hover:border-white/30 hover:-translate-y-0.5 transition-all"
        >
          <div class="text-xs text-secondary mb-2">← Previous</div>
          <div class="font-semibold text-sm group-hover:text-white transition-colors line-clamp-2">{prevPost.title}</div>
        </a>
        
        <!-- Next Post -->
        <a 
          href={`/blog/${nextPost.slug}`}
          class="group card p-4 hover:border-white/30 hover:-translate-y-0.5 transition-all text-right"
        >
          <div class="text-xs text-secondary mb-2">Next →</div>
          <div class="font-semibold text-sm group-hover:text-white transition-colors line-clamp-2">{nextPost.title}</div>
        </a>
      </div>

      <!-- Back to Blog -->
      <div class="text-center">
        <a href="/blog" class="inline-flex items-center gap-2 text-secondary hover:text-white transition text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to all posts
        </a>
      </div>
    </div>
  </article>
</Base>

<style>
  .prose-invert p {
    color: var(--text-secondary);
    line-height: 1.6;
  }
</style>
