---
import Base from '../layouts/Base.astro';
import { BlogFilters } from '../components/BlogFilters';
import { posts } from '../data/posts';
---
<Base title="Blog | Truong Gia Thanh">
  <section class="mx-auto max-w-6xl px-6 py-16 space-y-8">
    <div class="space-y-2">
      <p class="text-xs uppercase tracking-[0.3em] text-secondary">Blog</p>
      <h1 class="text-3xl font-bold">Latest writing</h1>
    </div>
    <BlogFilters client:load posts={posts} />
  </section>
</Base>
